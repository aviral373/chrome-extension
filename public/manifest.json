{
  "manifest_version": 2,
  "name": "Extension Name",
  "version": "0.1",
  "description": "Some Description",
  "permissions": [],
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "content_scripts": [
    {
      "js": ["static/js/content.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "Amazon Pricedrop",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  }
}
